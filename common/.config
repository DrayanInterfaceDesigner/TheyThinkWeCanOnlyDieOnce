; Main configuration file for the application
; Path: common/.config

[General]
; General settings
use_face = DefaultCatFace


[LocalServer]
; Network settings
host = localhost
port = 6000


[Detection]
; Detection settings
clahe_enhancement = False
clahe_clip_limit = 2.0
clahe_tile_grid_size = 8, 8
contrast_increase = 0.0
brightness_increase = 0.0
histogram_equalization = False
shape_predictor_path = resources/models/shape_predictor_5_face_landmarks.dat
crisp_enhancement = False
stabelize_landmarks = True
draw_landmarks = True

[Debug]
; Debug settings
debug_mode = True


[Camera]
; Camera settings
camera = 0
width = 640
height = 480
image_flip = 0
show_capture = True
fps = 30

